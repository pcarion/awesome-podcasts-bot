{
  "name": "awesome-podcasts-bot",
  "version": "1.0.0",
  "private": true,
  "description": "A Probot app",
  "author": "Pierre Carion <pcarion@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/pcarion/awesome-podcasts-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "clean:bot": "rimraf dist lib",
    "clean:action": "rimraf action lib",
    "package:bot": "ncc build lib/handler.js -o dist --source-map --license licenses.txt",
    "package:action": "ncc build lib/action.js -o action --source-map --license licenses.txt",
    "dist:bot": "npm run clean:bot && npm run build && npm run package:bot",
    "dist:action": "npm run clean:action && npm run build && npm run package:action",
    "package": "npm run package:bot && npm run package:action",
    "dist": "npm run dist:bot && npm run dist:action",
    "start": "probot run ./lib/index.js",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "axios": "^0.21.1",
    "build": "^0.1.4",
    "diacritics": "^1.3.0",
    "hashids": "^2.2.8",
    "html-to-text": "^6.0.0",
    "iconv-lite": "^0.6.2",
    "is-base64": "^1.1.0",
    "jimp": "^0.16.1",
    "js-yaml": "^4.0.0",
    "jtd": "0.0.9",
    "node-vibrant": "^3.2.1-alpha.1",
    "probot": "^11.0.1",
    "rss-parser": "^3.10.0",
    "sanitize-filename": "^1.6.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.71",
    "@types/axios": "^0.14.0",
    "@types/diacritics": "^1.3.1",
    "@types/hashids": "^1.0.32",
    "@types/html-to-text": "^6.0.0",
    "@types/iconv-lite": "0.0.1",
    "@types/is-base64": "^1.1.0",
    "@types/jest": "^26.0.19",
    "@types/jimp": "^0.2.28",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.22",
    "@types/sanitize-filename": "^1.6.3",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
